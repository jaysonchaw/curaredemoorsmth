                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/submissions/assignments/{{assignmentId}}/autograde",
              "host": ["{{baseUrl}}"],
              "path": ["api", "submissions", "assignments", "{{assignmentId}}", "autograde"]
            }
          }
        }
      ]
    },
