                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/submissions/assignments/{{assignmentId}}/submissions?graded=false&studentName=John",
              "host": ["{{baseUrl}}"],
              "path": ["api", "submissions", "assignments", "{{assignmentId}}", "submissions"],
            "query": [
              {
                "key": "graded",
                "value": "false"
              },
              {
                "key": "studentName",
                "value": "John"
              }
            ]
            }
          }
        },
        {
          "name": "Get Submission Details",
          "request": {
            "method": "GET",
            "header": [
