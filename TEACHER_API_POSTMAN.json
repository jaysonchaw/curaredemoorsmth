                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/assignments/{{assignmentId}}/publish",
              "host": ["{{baseUrl}}"],
              "path": ["api", "assignments", "{{assignmentId}}", "publish"]
