              "raw": "{\n  \"title\": \"Cell Biology Quiz\",\n  \"description\": \"Test your knowledge of cells\",\n  \"dueDate\": \"2024-12-31T23:59:59Z\",\n  \"visibilityStart\": \"2024-12-01T00:00:00Z\",\n  \"visibilityEnd\": \"2024-12-31T23:59:59Z\",\n  \"targetLessons\": [],\n  \"questions\": [\n    {\n      \"type\": \"multiple_choice\",\n      \"body\": \"What is the largest organ?\",\n      \"options\": {\n        \"options\": [\"Heart\", \"Liver\", \"Skin\", \"Lungs\"],\n        \"correct\": [2]\n      },\n      \"points\": 5,\n      \"metadata\": {\n        \"hint\": \"Think about what covers your body\",\n        \"adaptiveEnabled\": false\n      },\n      \"order_index\": 0\n    }\n  ],\n  \"status\": \"draft\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/assignments/classrooms/{{classroomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "assignments", "classrooms", "{{classroomId}}"]
