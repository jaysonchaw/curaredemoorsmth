              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/assignments/{{assignmentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "assignments", "{{assignmentId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Submissions",
      "item": [
        {
          "name": "Student Submit Assignment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": \"student-uuid-here\",\n  \"answers\": [2, \"heart\", \"The respiratory system allows us to breathe.\"],\n  \"timeSpent\": 600,\n  \"deviceMetadata\": {\n    \"browser\": \"Chrome\",\n    \"os\": \"Windows\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/submissions/assignments/{{assignmentId}}/submit",
              "host": ["{{baseUrl}}"],
              "path": ["api", "submissions", "assignments", "{{assignmentId}}", "submit"]
            }
          }
        },
        {
          "name": "List Submissions",
          "request": {
            "method": "GET",
            "header": [
