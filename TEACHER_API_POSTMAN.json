{
  "info": {
    "name": "Curare Teacher Platform API",
    "description": "API collection for Curare teacher platform features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "noauth",
    "noauth": {}
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "teacherId",
      "value": "your-teacher-id-here",
      "type": "string"
    },
    {
      "key": "classroomId",
      "value": "your-classroom-id-here",
      "type": "string"
    },
    {
      "key": "assignmentId",
      "value": "your-assignment-id-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Lessons",
      "item": [
        {
          "name": "Get All Global Lessons",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/lessons",
              "host": ["{{baseUrl}}"],
              "path": ["api", "lessons"]
            }
          }
        },
        {
          "name": "Get Classroom Lessons",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/lessons/classrooms/{{classroomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "lessons", "classrooms", "{{classroomId}}"]
            }
          }
        },
        {
          "name": "Map Lesson to Classroom",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"lessonId\": \"lesson-uuid-here\",\n  \"seqOrder\": 1,\n  \"mandatory\": false,\n  \"locked\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/lessons/classrooms/{{classroomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "lessons", "classrooms", "{{classroomId}}"]
            }
          }
        },
        {
          "name": "Update Lesson Mapping",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"locked\": true,\n  \"mandatory\": true,\n  \"seqOrder\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/lessons/classrooms/{{classroomId}}/lessons/:classroomLessonId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "lessons", "classrooms", "{{classroomId}}", "lessons", ":classroomLessonId"]
            }
          }
        },
        {
          "name": "Remove Lesson Mapping",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/lessons/classrooms/{{classroomId}}/lessons/:classroomLessonId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "lessons", "classrooms", "{{classroomId}}", "lessons", ":classroomLessonId"]
            }
          }
        }
      ]
    },
    {
