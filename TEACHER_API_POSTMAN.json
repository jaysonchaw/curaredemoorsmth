              },
              {
                "key": "x-teacher-id",
                "value": "{{teacherId}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"description\": \"Updated description\",\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/assignments/{{assignmentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "assignments", "{{assignmentId}}"]
